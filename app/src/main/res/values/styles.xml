<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoRippleBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ViewStyleGray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/appViewStroke</item>
    </style>


    <style name="TextEditInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/select_stoke</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="errorEnabled">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableTint">@color/editTextIcon</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="endIconMode">none</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="EditTextLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="drawableTint">@color/editTextIcon</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/editTextIcon</item>
    </style>



</resources>